# CodeCrafter XR Environment Variables

# Server Configuration
PORT=3000

# LLM API Keys
# Uncomment and add your API key for the service you want to use
# ANTHROPIC_API_KEY=your_claude_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here

# GitHub API Configuration
# GITHUB_CLIENT_ID=your_github_oauth_client_id
# GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
# GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback

# Deployment Configuration
# ALLOWED_ORIGINS=http://localhost:3000,https://codecrafter-xr.io

# Feature Flags
ENABLE_LLM_FEATURES=true
ENABLE_GITHUB_DEPLOYMENT=true
SIMULATE_API_CALLS=true  # For development only, set to false in production
